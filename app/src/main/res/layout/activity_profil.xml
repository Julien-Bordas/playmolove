<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        android:layout_marginTop="@dimen/low"
        app:layout_constraintBottom_toTopOf="@+id/bot_nav"
        app:layout_constraintTop_toBottomOf="@+id/ajouter_photo"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="@dimen/photosize"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>


        </TableLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_nav"
        android:layout_width="413dp"
        android:layout_height="56dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bot_navigation"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/top_nav"
        android:layout_width="57dp"
        android:layout_height="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/top_navigation" />


    <ImageView
        android:id="@+id/photo"
        android:layout_width="232dp"
        android:layout_height="221dp"
        android:layout_marginTop="90dp"
        android:foreground="@drawable/rounded_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Jack, 21 ans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo" />

    <TextView
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/low"
        android:text="ESME"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/ajouter_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter des photos"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/low"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity" />


</androidx.constraintlayout.widget.ConstraintLayout>